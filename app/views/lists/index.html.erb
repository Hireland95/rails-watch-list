
<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1543536448-1e76fc2795bf?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1739&q=80);">
  <div class="container">
    <h1>Save any kind of movies</h1>
  </div>
</div>


<div class="container">
  <div class="top">
      <h2>My lists</h2>
      <h2 class="btn btn-flat"><%= link_to "Create a movie list", new_list_path %></h2>
    </div>
</div>

<div class="container">
    <div class="row">
        <% @lists.each do |list| %>
          <div class="card-category col-3" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path list.photo.key, height: 200, crop: :fill %>')"> <%= link_to list.name, list_path(list)%>
            <%=link_to "🗑️", list_path(list), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %></div>
            <% end %>
    </div>
</div>
